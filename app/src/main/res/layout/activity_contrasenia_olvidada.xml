<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.network.domain.ui.view.ContraseniaOlvidada">


    <TextView
        android:id="@+id/contrasenaOlvidada.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="28dp"
        android:text="@string/contraseñaolvidada.textoInformativo"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/contrasenaOlvidada.edEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenaOlvidada.imgviewIberdrola" />

    <EditText
        android:id="@+id/contrasenaOlvidada.edEmail"
        android:layout_width="347dp"
        android:layout_height="47dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="73dp"
        android:textStyle="bold"
        android:tooltipText="Email"
        app:layout_constraintBottom_toTopOf="@+id/contrasenaOlvidada.btnEnviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenaOlvidada.tv" />

    <ImageView
        android:id="@+id/contrasenaOlvidada.imgviewIberdrola"
        android:layout_width="214dp"
        android:layout_height="53dp"
        android:layout_marginTop="149dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@+id/contrasenaOlvidada.tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_iberdrola_cli" />

    <Button
        android:id="@+id/contrasenaOlvidada.btnEnviar"
        android:layout_width="189dp"
        android:layout_height="48dp"
        android:layout_marginBottom="267dp"
        android:background="@drawable/borde_botones"
        android:text="@string/contraseñaolvidada.btnTexto"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrasenaOlvidada.edEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>