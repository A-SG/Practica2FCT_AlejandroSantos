<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/popupFragmentDetalle.tvtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="16dp"
        android:text="@string/popup_fragmentodetalle.titulopopup"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/popupFragmentDetalle.tvInformacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popupFragmentDetalle.tvInformacion"
        android:layout_width="273dp"
        android:layout_height="79dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="18dp"
        android:text="@string/popup_fragmentodetalle.cuerpopopup"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/popupFragmentDetalle.btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popupFragmentDetalle.tvtitulo"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/popupFragmentDetalle.btn"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/borde_botones"
        android:text="@string/popup_fragmentodetalle.textoboton"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popupFragmentDetalle.tvInformacion" />

</androidx.constraintlayout.widget.ConstraintLayout>